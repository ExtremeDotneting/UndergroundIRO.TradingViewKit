<UserControl x:Class="UndergroundIRO.TradingViewKit.Wpf.TradingViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             xmlns:gif="http://wpfanimatedgif.codeplex.com" 
             d:DesignHeight="500" d:DesignWidth="1000">
    <Grid>
        <ContentControl x:Name="BrowserPlace"></ContentControl>
        <Grid x:Name="LoadingImageGrid" Background="White" >
            <Image x:Name="loadImg" gif:ImageBehavior.AnimatedSource="/UndergroundIRO.TradingViewKit.Wpf;component/loading.gif" 
                       gif:ImageBehavior.RepeatBehavior="20x"
                       Stretch="Fill" Height="380" HorizontalAlignment="Center" Margin="10" Width="380" VerticalAlignment="Center"/>
        </Grid>

    </Grid>
</UserControl>
